<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@drawable/ru"
    android:gravity="center"
    tools:context=".LibraryFragment"
    tools:visibility="visible"
    android:layout_marginVertical="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="¿CÓMO DENUNCIAR?"
        android:textColor="@color/green2"
        android:textSize="25sp"
        android:layout_margin="34dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:columnCount="2"
        android:paddingVertical="45dp"
        android:rowCount="5"
        android:layout_margin="28dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_estructura"
            android:background="@drawable/estilo_texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:text="ESTRUCTURA DE UNA DENUNCIA"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_Violencia_C_M_F"
            android:background="@drawable/estilo_texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            style="@style/ButtonStyle5_Violencia_C_M_F"
            android:text="VIOLENCIA CONTRA LA MUJER Y FAMILIA"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_Robo_deD"
            android:background="@drawable/estilo_texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:text="DESPOJO DE BIENES"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_Acoso"
            android:background="@drawable/estilo_texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:text="ACOSO SEXUAL"
            android:textSize="17sp" />

        <Button
            android:id="@+id/Por_Agresion"
            android:background="@drawable/estilo_texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:text="DELITO DIGITAL"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_maltrato_animal"
            android:background="@drawable/estilo_texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:text="MALTRATO ANIMAL"
            android:textSize="17sp" />
    </GridLayout>
</FrameLayout>