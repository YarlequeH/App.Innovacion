<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15009688"
    android:visibility="visible"
    tools:context=".LibraryFragment"
    tools:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="¿CÓMO DENUNCIAR?"
        android:textColor="#3056C8"
        android:textSize="25sp"

        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="10sp"
        android:columnCount="2"
        android:paddingVertical="40dp"
        android:rowCount="5">

        <Button
            android:id="@+id/btn_estructura"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="@color/teal_200"
            android:backgroundTint="#C75C3C"
            android:text="ESTRUCTURA DE UNA DENUNCIA"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_Violencia_C_M_F"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#F06D36"
            android:text="VIOLENCIA CONTRA LA MUJER Y FAMILIA"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_Robo_deD"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#F06D36"
            android:text="POR PERDIDA Y ROBO DE DOCUMENTOS"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_Acoso"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#F06D36"
            android:text="ACOSO SEXUAL"
            android:textSize="18sp" />

        <Button
            android:id="@+id/Por_Agresion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#F06D36"
            android:text="DENUNCIA POR AGRESIÓN"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_maltrato_animal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#F06D36"
            android:text="MALTRATO ANIMAL"
            android:textSize="18sp" />
    </GridLayout>
</FrameLayout>
