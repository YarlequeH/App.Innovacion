<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginVertical="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿CUÁNDO SE DENUNCIA?"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="En caso de una acción o conducta que cause muerte, daño o sufrimiento de cualquier tipo a una mujer o miembro del grupo familiar."
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="RESPALDADO POR:"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="- Artículo 5º de la Ley Nº 30364. \n\- artículo 6º de la Ley Nº 30364."
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿DÓNDE PUEDES IR A DENUNCIAR?"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Para hacer la denuncia, puedes elegir identificarte o no. En ambos casos, tu identidad siempre se mantendrá en reserva. "
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="5sp"
        android:backgroundTint="#C75C3C"
        android:gravity="center"
        android:text="Para mas Información"
        android:textSize="18sp"
        android:id="@+id/btn_redireccionar"
        />


</LinearLayout>